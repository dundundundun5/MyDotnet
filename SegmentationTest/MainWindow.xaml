<Window
    x:Class="SegmentationTest.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SegmentationTest"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="dundun"
    Title="顿の切割测试"
    Width="800"
    Height="800"
    mc:Ignorable="d">
    <Grid Margin="20" DataContext="{Binding ElementName=dundun}">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Vertical" Margin="0,0,0,10">
            <TextBlock
                x:Name="selectResult"
                FontSize="18"
                Text="{Binding SelectedItem, ElementName=stations, StringFormat='目前站点是{0}', TargetNullValue='未选择任何站点'}" />
            <ComboBox
                x:Name="stations"
                ItemsSource="{Binding StationList}"
                SelectedItem="{x:Null}"
                SelectionChanged="StationChanged" />
            <Button
                x:Name="gatherLongButton"
                Grid.Row="1"
                Width="200"
                Height="25"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Click="GatherLongClick"
                Content="汇总今日长图"
                IsEnabled="True"/>
            <Button
                x:Name="pickShortButton"
                Grid.Row="1"
                Width="200"
                Height="25"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Click="PickShortClick"
                Content="保留标记过的长图" 
                IsEnabled="True"/>
        </StackPanel>

        <TextBox
            x:Name="myConsole"
            Grid.RowSpan="4"
            Grid.Column="1"
            AcceptsReturn="True"
            AcceptsTab="True"
            Background="White"
            FontFamily="Consolas"
            FontSize="14"
            Foreground="Black"
            HorizontalScrollBarVisibility="Auto"
            IsReadOnly="True"
            TextWrapping="Wrap"
            VerticalScrollBarVisibility="Auto" />


    </Grid>

</Window>

<Window
    x:Class="PickImages.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PickImages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="顿の根据长图找原图"
    Width="820"
    Height="450"
    FontFamily="Consolas"
    FontSize="14"
    mc:Ignorable="d"
    Margin="0">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="600" />
            <ColumnDefinition Width="200" />

        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
            <RowDefinition Height="220" />
        </Grid.RowDefinitions>

        <!--  显示选择的文件路径  -->



        <!--  浏览文件按钮  -->
        <Button
            x:Name="OCRButton1"
            Grid.Column="1"
            Width="190"
            Height="40"
            Margin="5"
            HorizontalAlignment="Left"
            Click="OCRButton1_Click"
            Content="选择文件并找原图" />
        <Button
            x:Name="OCRButton2"
            Grid.Row="1"
            Grid.Column="1"
            Width="190"
            Height="40"
            Margin="5"
            HorizontalAlignment="Left"
            Click="OCRButton2_Click"
            Content="选择文件并找原图" />
        <Button
            x:Name="DetectCSButton"
            Grid.Row="2"
            Grid.Column="1"
            Width="190"
            Height="40"
            Margin="5"
            HorizontalAlignment="Left"
            Click="DetectCSButton_Click"
            Content="选择文件夹并找原图" />
        <Button
            x:Name="DetectZXButton"
            Grid.Row="3"
            Grid.Column="1"
            Width="190"
            Height="40"
            Margin="5"
            HorizontalAlignment="Left"
            Click="DetectZXButton_Click"
            Content="选择文件夹并找原图" />
        <TextBox
            x:Name="OCRFile1"
            Width="Auto"
            Height="20"
            Margin="10"
            IsReadOnly="True"
            Text="======选择OCR识别错.txt=====" />
        <TextBox
            x:Name="OCRFile2"
            Grid.Row="1"
            Width="Auto"
            Height="20"
            Margin="10"
            IsReadOnly="True"
            Text="======选择OCR少框.txt======" />
        <TextBox
            x:Name="DetectCSFolder"
            Grid.Row="2"
            Width="Auto"
            Height="20"
            Margin="10"
            IsReadOnly="True"
            Text="======选择车身误检测文件夹=====" />
        <TextBox
            x:Name="DetectZXFolder"
            Grid.Row="3"
            Width="Auto"
            Height="20"
            Margin="10"
            IsReadOnly="True"
            Text="======选择走行误检测文件夹======" />
        <TextBox
            x:Name="myConsole"
            Grid.Row="4"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Width="750"
            Height="190"
            Margin="5"
            AcceptsReturn="True"
            AcceptsTab="True"
            Background="White"
            FontFamily="Consolas"
            FontSize="13"
            Foreground="Black"
            HorizontalScrollBarVisibility="Auto"
            IsReadOnly="True"
            TextWrapping="NoWrap"
            VerticalScrollBarVisibility="Auto" />
        <!--  浏览文件按钮  -->


    </Grid>
</Window>

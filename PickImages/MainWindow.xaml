<Window x:Class="PickImages.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PickImages"
        mc:Ignorable="d"
        Title="误检测长图和OCR短图" Height="450" Width="800" Margin="0">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="600"></ColumnDefinition>
            <ColumnDefinition Width="200"></ColumnDefinition>
            
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="220"></RowDefinition>
        </Grid.RowDefinitions>

        <!-- 显示选择的文件路径 -->
        <TextBox x:Name="OCRFile1" 
                 IsReadOnly="True" 
                 Text="请选择OCR识别错文件路径" 
                 Width="Auto"
                 Height="20"
                 Margin="10" 
        />

        <!-- 浏览文件按钮 -->
        <Button Content="选择文件并找短图" Click="BrowseFileButton2_Click" Width="190" Height="40" HorizontalAlignment="Left" Grid.Column="1" Grid.Row="1" Margin="5"/>
        <TextBox x:Name="OCRFile2" 
         IsReadOnly="True" 
         Text="请选择OCR框错的文件路径" 
         Width="Auto"
         Height="20"
         Margin="10" 
         Grid.Row="1"
        
/>

        <!-- 浏览文件按钮 -->
        <Button Content="选择文件并找短图" Click="BrowseFileButton1_Click" Width="190" Height="40" HorizontalAlignment="Left" Grid.Column="1" Margin="5" />
        <TextBox
            x:Name="myConsole"
            Height="190"
            Width="750"
            Grid.ColumnSpan="2"
            Grid.Column="0"
            Grid.Row="4"
            AcceptsReturn="True"
            AcceptsTab="True"
            Background="White"
            FontFamily="Consolas"
            FontSize="13"
            Foreground="Black"
            HorizontalScrollBarVisibility="Auto"
            IsReadOnly="True"
            TextWrapping="NoWrap"
            VerticalScrollBarVisibility="Auto"
            Margin="5"/>
    </Grid>
</Window>
